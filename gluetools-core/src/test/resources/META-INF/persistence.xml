<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_1_0.xsd"
	version="1.0">
	<!-- The following commands prepare a bare MySQL install for tests to run.
	
	create user 'glue'@'localhost' identified by 'glue';
	grant all privileges on *.* to 'glue'@'localhost';
	create database glue character set UTF8;
	
	-->
	<persistence-unit name="glue-persistence-unit" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/glue" />
			<property name="javax.persistence.jdbc.user" value="glue" />
			<property name="javax.persistence.jdbc.password" value="glue" />
		</properties>
	</persistence-unit>
</persistence>
